<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <% if @coffee_record.image.present? %>
          <%= image_tag @coffee_record.image.url, class: "card-img-top", style: "height: 400px; object-fit: cover;" %>
        <% else %>
          <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 400px;">
            <div class="text-center text-white">
              <i class="fas fa-coffee fa-3x mb-2"></i>
              <div>No Image</div>
            </div>
          </div>
        <% end %>
        
        <div class="card-body">
          <!-- 投稿者名を追加 -->
          <div class="mb-3">
            <small class="text-muted">
              <i class="fas fa-user"></i> 投稿者: <%= @coffee_record.user.name %>
            </small>
          </div>

          <div class="mb-4">
            <h5 class="text-muted mb-3">基本情報</h5>
            <div class="row">
              <div class="col-md-6">
                <p><strong>産地：</strong><%= @coffee_record.origin %></p>
                <p><strong>豆の種類：</strong><%= @coffee_record.bean_type %></p>
                <p><strong>精製方法：</strong><%= @coffee_record.process_method %></p>
                <p><strong>ロースト：</strong><%= @coffee_record.roast_level %></p>
              </div>
              <div class="col-md-6">
                <p><strong>酸味：</strong><%= @coffee_record.acidity_level %></p>
                <p><strong>ボディ：</strong><%= @coffee_record.body_level %></p>
              </div>
            </div>
          </div>

          <% if @coffee_record.notes.present? %>
            <div class="mb-4">
              <h5 class="text-muted mb-3">メモ</h5>
              <p class="card-text"><%= @coffee_record.notes %></p>
            </div>
          <% end %>

          <!-- ブックマークボタン -->
          <% unless @coffee_record.user == current_user %>
            <div class="mb-3" onclick="event.stopPropagation();">
              <% if current_user.bookmarked_coffee_records.include?(@coffee_record) %>
                <%= button_to coffee_record_bookmark_path(@coffee_record), 
                    method: :delete, 
                    class: "btn btn-warning",
                    form: { style: 'display: inline-block' } do %>
                  <i class="fas fa-bookmark"></i> ブックマーク解除
                <% end %>
              <% else %>
                <%= button_to coffee_record_bookmark_path(@coffee_record), 
                    method: :post, 
                    class: "btn btn-outline-warning",
                    form: { style: 'display: inline-block' } do %>
                  <i class="far fa-bookmark"></i> ブックマーク
                <% end %>
              <% end %>
            </div>
          <% end %>

          <div class="d-flex justify-content-between align-items-center mt-4">
            <%= link_to "戻る", coffee_records_path, class: "btn btn-outline-secondary" %>
            
            <!-- 自分の投稿のみ編集・削除ボタンを表示 -->
            <% if @coffee_record.user == current_user %>
              <div class="d-flex gap-2">
                <%= link_to "編集", edit_coffee_record_path(@coffee_record), class: "btn btn-outline-primary" %>
                <%= button_to "削除", coffee_record_path(@coffee_record), 
                    method: :delete, 
                    class: "btn btn-outline-danger",
                    form: { style: 'display: inline-block' },
                    data: { turbo_confirm: "本当に削除しますか？" } %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

