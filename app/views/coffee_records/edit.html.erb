<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1 class="mb-4">コーヒー記録の編集</h1>

      <%= form_with(model: @coffee_record, local: true) do |f| %>
        <% if @coffee_record.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% @coffee_record.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :image, "画像", class: "form-label" %>
          <% if @coffee_record.image.present? %>
            <div class="mb-2">
              <%= image_tag @coffee_record.image.url, class: "img-thumbnail", style: "max-height: 200px;" %>
            </div>
          <% end %>
          <%= f.file_field :image, class: "form-control", accept: 'image/*' %>
        </div>

        <div class="mb-3">
          <%= f.label :origin, "産地", class: "form-label" %>
          <%= f.text_field :origin, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :bean_type, "豆の種類", class: "form-label" %>
          <%= f.text_field :bean_type, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :process_method, "精製方法", class: "form-label" %>
          <%= f.text_field :process_method, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :roast_level, "ロースト", class: "form-label" %>
          <%= f.select :roast_level,
               [['Dark', 'Dark'], ['Medium', 'Medium'], ['Light', 'Light']],
               { prompt: "選択してください" },
               class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= f.label :acidity_level, "酸味", class: "form-label" %>
          <%= f.select :acidity_level,
               [['High', 'High'], ['Medium', 'Medium'], ['Low', 'Low']],
               { prompt: "選択してください" },
               class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= f.label :body_level, "ボディ", class: "form-label" %>
          <%= f.select :body_level,
               [['Full', 'Full'], ['Medium', 'Medium'], ['Light', 'Light']],
               { prompt: "選択してください" },
               class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= f.label :notes, "メモ", class: "form-label" %>
          <%= f.text_area :notes, class: "form-control", rows: 3 %>
        </div>

        <div class="mb-3">
          <%= f.submit "更新する", class: "btn btn-primary" %>
          <%= link_to "戻る", coffee_records_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
