<div class="container mt-4">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
    <h1 class="mb-3 mb-md-0">コーヒー記録一覧</h1>
    <%= link_to "新規記録", new_coffee_record_path, class: "btn btn-primary" %>
  </div>

  <%= form_with url: coffee_records_path, method: :get, local: true do |f| %>
    <div class="row g-3 mb-4">
      <div class="col-12 col-md-6 col-lg-3">
        <%= f.label :name, "コーヒー名", class: "form-label" %>
        <%= f.text_field :name, value: params[:name], class: "form-control" %>
      </div>
      <div class="col-12 col-md-6 col-lg-3">
        <%= f.label :origin, "産地", class: "form-label" %>
        <%= f.text_field :origin, value: params[:origin], class: "form-control" %>
      </div>
      <div class="col-12 col-md-6 col-lg-3">
        <%= f.label :roast_level, "焙煎度", class: "form-label" %>
        <%= f.select :roast_level, options_for_select(CoffeeRecord::ROAST_LEVELS, params[:roast_level]), include_blank: true, class: "form-control" %>
      </div>
      <div class="col-12 col-md-6 col-lg-3 d-flex align-items-end">
        <div class="d-flex gap-2 w-100">
          <%= f.submit "検索", class: "btn btn-primary flex-fill" %>
          <%= link_to "クリア", coffee_records_path, class: "btn btn-secondary flex-fill" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% @coffee_records.each do |record| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <%= link_to coffee_record_path(record), class: "text-decoration-none text-dark" do %>
            <% if record.image.present? %>
              <%= image_tag record.image.url, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
            <% else %>
              <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                <div class="text-center text-white">
                  <i class="fas fa-coffee fa-3x mb-2"></i>
                  <div>No Image</div>
                </div>
              </div>
            <% end %>
          <% end %>
          
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-truncate"><%= record.origin %></h5>
            <div class="card-text flex-grow-1 small">
              <div class="mb-1">
                <strong>豆の種類:</strong> 
                <span class="text-truncate d-inline-block" style="max-width: 150px;" title="<%= record.bean_type %>">
                  <%= record.bean_type %>
                </span>
              </div>
              <div class="mb-1">
                <strong>精製方法:</strong> 
                <span class="text-truncate d-inline-block" style="max-width: 150px;" title="<%= record.process_method %>">
                  <%= record.process_method %>
                </span>
              </div>
              <div class="mb-1">
                <strong>ロースト:</strong> <%= record.roast_level %>
              </div>
              <div class="mb-1">
                <strong>酸味:</strong> <%= record.acidity_level %>
              </div>
              <div class="mb-1">
                <strong>ボディ:</strong> <%= record.body_level %>
              </div>
            </div>
            <small class="text-muted mb-3">
              <i class="fas fa-user"></i> <%= record.user.name %>
            </small>
            
            <div class="mt-auto" onclick="event.stopPropagation();">
              <!-- ブックマークボタン -->
              <% unless record.user == current_user %>
                <% if current_user.bookmarked_coffee_records.include?(record) %>
                  <%= button_to coffee_record_bookmark_path(record), 
                      method: :delete, 
                      class: "btn btn-sm btn-warning mb-2 w-100",
                      form: { style: 'display: inline-block' } do %>
                    <i class="fas fa-bookmark"></i> <span class="d-none d-sm-inline">ブックマーク解除</span>
                  <% end %>
                <% else %>
                  <%= button_to coffee_record_bookmark_path(record), 
                      method: :post, 
                      class: "btn btn-sm btn-outline-warning mb-2 w-100",
                      form: { style: 'display: inline-block' } do %>
                    <i class="far fa-bookmark"></i> <span class="d-none d-sm-inline">ブックマーク</span>
                  <% end %>
                <% end %>
              <% end %>
              
              <!-- 自分の投稿のみ編集・削除ボタンを表示 -->
              <% if record.user == current_user %>
                <div class="d-flex gap-2">
                  <%= link_to edit_coffee_record_path(record), class: "btn btn-sm btn-outline-secondary flex-fill" do %>
                    <i class="fas fa-edit"></i> <span class="d-none d-sm-inline">編集</span>
                  <% end %>
                  <%= button_to coffee_record_path(record), 
                      method: :delete, 
                      class: "btn btn-sm btn-outline-danger flex-fill",
                      form: { style: 'display: inline-block' },
                      data: { turbo_confirm: "本当に削除しますか？" } do %>
                    <i class="fas fa-trash"></i> <span class="d-none d-sm-inline">削除</span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @coffee_records %>
  </div>
</div>