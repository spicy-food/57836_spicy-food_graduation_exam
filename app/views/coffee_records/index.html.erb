<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>コーヒー記録一覧</h1>
    <%= link_to "新規記録", new_coffee_record_path, class: "btn btn-primary" %>
  </div>

  <div class="row">
    <% @coffee_records.each do |record| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <% if record.image.present? %>
            <%= image_tag record.image.url, class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= record.origin %></h5>
            <p class="card-text">
              <strong>豆の種類:</strong> <%= record.bean_type %><br>
              <strong>精製方法:</strong> <%= record.process_method %><br>
              <strong>ローストレベル:</strong> <%= record.roast_level %>/5<br>
              <strong>酸味レベル:</strong> <%= record.acidity_level %>/5<br>
              <strong>ボディレベル:</strong> <%= record.body_level %>/5
            </p>
            <div class="btn-group">
              <%= link_to "編集", edit_coffee_record_path(record), class: "btn btn-sm btn-outline-primary" %>
              <%= link_to "削除", coffee_record_path(record), 
                  data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                  class: "btn btn-sm btn-outline-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
