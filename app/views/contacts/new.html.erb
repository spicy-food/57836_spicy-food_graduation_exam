<div class="container mt-4">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h1 class="h3 mb-0">
            <i class="fas fa-envelope me-2"></i>お問い合わせ
          </h1>
        </div>
        
        <div class="card-body">
          <p class="text-muted mb-4">
            ご質問やご意見がございましたら、以下のフォームからお気軽にお問い合わせください。
          </p>

          <%= form_with(url: contact_path, model: @contact, local: true, class: "needs-validation", novalidate: true) do |form| %>
            <% if @contact.errors.any? %>
              <div class="alert alert-danger">
                <h5>以下のエラーを修正してください：</h5>
                <ul class="mb-0">
                  <% @contact.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row g-3">
              <div class="col-12 col-md-6">
                <%= form.label :name, "お名前", class: "form-label" %>
                <%= form.text_field :name, class: "form-control", placeholder: "山田太郎", required: true %>
                <div class="invalid-feedback">
                  お名前を入力してください。
                </div>
              </div>

              <div class="col-12 col-md-6">
                <%= form.label :email, "メールアドレス", class: "form-label" %>
                <%= form.email_field :email, class: "form-control", placeholder: "example@email.com", required: true %>
                <div class="invalid-feedback">
                  有効なメールアドレスを入力してください。
                </div>
              </div>

              <div class="col-12 col-md-6">
                <%= form.label :category, "カテゴリ", class: "form-label" %>
                <%= form.select :category, 
                    options_for_select(Contact::CATEGORIES, @contact.category), 
                    { prompt: "カテゴリを選択してください" }, 
                    { class: "form-select" } %>
              </div>

              <div class="col-12 col-md-6">
                <%= form.label :subject, "件名", class: "form-label" %>
                <%= form.text_field :subject, class: "form-control", placeholder: "お問い合わせの件名", required: true %>
                <div class="invalid-feedback">
                  件名を入力してください。
                </div>
              </div>

              <div class="col-12">
                <%= form.label :message, "メッセージ", class: "form-label" %>
                <%= form.text_area :message, 
                    class: "form-control", 
                    rows: 6, 
                    placeholder: "お問い合わせ内容を詳しく記入してください（10文字以上）", 
                    required: true %>
                <div class="invalid-feedback">
                  メッセージを10文字以上入力してください。
                </div>
                <div class="form-text">
                  10文字以上1000文字以内で入力してください。
                </div>
              </div>

              <div class="col-12">
                <div class="d-flex flex-column flex-sm-row gap-2">
                  <%= form.submit "送信する", class: "btn btn-primary flex-fill" %>
                  <%= link_to "戻る", root_path, class: "btn btn-outline-secondary flex-fill" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>