<!-- ヒーローセクション -->
<div class="hero-section position-relative text-white mb-5" style="height: 40vh; background:url('<%= asset_path("hero_coffee.jpg") %>') center/cover no-repeat;">
  <div class="hero-overlay h-100 w-100" style="background:rgba(0,0,0,0.4);">
    <div class="container h-100 d-flex align-items-center">
      <div class="hero-content text-center w-100">
        <h1 class="display-4 fw-bold mb-3">Coffee Records</h1>
        <p class="lead mb-4">あなたのコーヒー体験を、美しく記録しよう</p>
        <div class="hero-features">
          <span class="badge bg-light text-dark me-2">📝 記録</span>
          <span class="badge bg-light text-dark me-2">🤝 共有</span>
          <span class="badge bg-light text-dark me-2">📊 分析</span>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 新規登録フォーム -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg border-0">
        <div class="card-body p-5">
          <h2 class="text-center mb-4">新規登録</h2>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="mb-3">
              <%= f.label :name, "お名前", class: "form-label fw-semibold" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-lg" %>
            </div>

            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label fw-semibold" %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-lg" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "パスワード", class: "form-label fw-semibold" %>
              <% if @minimum_password_length %>
                <small class="text-muted">（<%= @minimum_password_length %>文字以上）</small>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label fw-semibold" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
            </div>

            <!-- セキュリティ質問の追加 -->
            <div class="mb-3">
              <%= f.label :security_question, "セキュリティ質問", class: "form-label fw-semibold" %>
              <%= f.select :security_question, [
                ["あなたの出身地は？", "birthplace"],
                ["あなたのペットの名前は？", "pet_name"],
                ["あなたの好きな食べ物は？", "favorite_food"],
                ["あなたの好きな色は？", "favorite_color"],
                ["あなたの趣味は？", "hobby"]
              ], { prompt: "質問を選択してください" }, { class: "form-control form-control-lg" } %>
            </div>

            <div class="mb-4">
              <%= f.label :security_answer, "回答", class: "form-label fw-semibold" %>
              <%= f.text_field :security_answer, class: "form-control form-control-lg" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "新規登録", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="d-grid gap-2">
            <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-danger btn-lg d-flex align-items-center justify-content-center" do %>
              <i class="fab fa-google me-2"></i>
              Googleで新規登録
            <% end %>
          </div>

          <div class="text-center mt-4">
            <%= link_to "ログイン", new_session_path(resource_name), class: "text-decoration-none fw-semibold" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>