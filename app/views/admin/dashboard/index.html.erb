<div class="container-fluid">
  <div class="row mb-4">
    <div class="col">
      <h1 class="h3 mb-0">
        <i class="fas fa-tachometer-alt text-primary"></i>
        管理者ダッシュボード
      </h1>
    </div>
  </div>

  <!-- 統計カード -->
  <div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                総ユーザー数
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                <%= @total_users %>人
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-users fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                総コーヒー記録数
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                <%= @total_coffee_records %>件
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-coffee fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                今日の投稿数
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                <%= @today_records %>件
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                最多投稿ユーザー
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                <%= @top_user&.name || "なし" %>
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-crown fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 人気の産地ランキング -->
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header">
          <i class="fas fa-globe-asia text-primary"></i> 人気の産地ランキング
        </div>
        <ul class="list-group list-group-flush">
          <% @popular_origins.each do |origin, count| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= origin.presence || "未設定" %>
              <span class="badge bg-primary rounded-pill"><%= count %>件</span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- 人気の焙煎度ランキング -->
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header">
          <i class="fas fa-fire text-danger"></i> 人気の焙煎度ランキング
        </div>
        <ul class="list-group list-group-flush">
          <% @popular_roast_levels.each do |roast, count| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= roast.presence || "未設定" %>
              <span class="badge bg-danger rounded-pill"><%= count %>件</span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>